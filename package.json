{
  "name": "ygr-styleguide",
  "version": "1.0.7",
  "description": "Styleguide of Your Game Race, a competition platform for online games.",
  "main": "index.js",
  "repository": "https://github.com/Journerist/ygr-styleguide",
  "author": "Sebastian Barthel",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^3.5.1",
    "copy": "^0.3.1",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.10",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.7",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  },
  "scripts": {
    "test": "stylelint src",
    "auto-fix": "stylelint src --fix && stylelint docs/assets/styles/*.scss --fix",
    "build": "webpack && node ./node_modules/copy/bin/cli.js dist/*.css docs/assets/styles/",
    "watch": "concurrently --kill-others \"webpack --watch\" \"cpx dist/*.css docs/assets/styles/ --watch\""
  }
}
